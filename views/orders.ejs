<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <style>
        .food{
            width: 100px;
            height: 50px;
            background: #e3c0c0;
            text-align: center;
            padding-top: 23px; cursor: pointer; margin: 12px;
        }
        .selected{
            background-color: rgb(0, 170, 0);
        }
    </style>
</head>
<body>
    <section id="table-booking">
        <div class="food" name="1">food 1</div>
        <div class="food"name="2">food 2</div>
        <div class="food" name="3">food 3</div>
        <div class="food"name="4">food 4</div>
                
        <br>
        <button style="margin: 12px;"class="book_table">ORDER</button>
    </section>

    <script>
        $(document).ready(function(){
            $(".food").click(function(){
                $(this).toggleClass("selected");
            });
        });
        var foodOrder = []

        $('.food').on('click', function(){
                var value = $(this).attr('name');

                
                function remove(foodOrder, value) {
                    var i = foodOrder.indexOf(value)
                    if(i > -1){                            
                        foodOrder.splice(i, 1);
                    }                           
                }

                if(!foodOrder.includes(value)){
                    foodOrder.push(value);
                }
                else{
                    remove(foodOrder, value);                    
                }

                console.log(foodOrder);
                
                
        });

        


    </script>
    
</body>
</html>