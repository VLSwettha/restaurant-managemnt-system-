<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <style>
        .food{
            width: 100px;
            height: 50px;
            background: #e3c0c0;
            text-align: center;
            padding-top: 23px; cursor: pointer; margin: 12px;
        }
        .selected{
            background-color: rgb(0, 170, 0);
        }
    </style>
</head>
<body>
    <section id="table-booking">
        <div class="food" name="1">food 1</div>
        <div class="food"name="2">food 2</div>
        <div class="food" name="3">food 3</div>
        <div class="food"name="4">food 4</div>
                
        <br>
        <button style="margin: 12px;"class="order">ORDER</button>
    </section>

    <script>
        $(document).ready(function(){

            $(".order").click(function(){
                var details = {'foods':'{"grape": "2", "pudding": "4"}', 'totalCost':'150'} 
                $.ajax({
                url: "http://localhost:8000/foodorders",
                type: "POST",

                data: details,

                dataType: 'json',

                success: function(result) {
                    if(result === "no_errors") location.href = "http://localhost:8000/successful"
                    // console.log(result);
                }

            })


            })
        });
        

    </script>
    
</body>
</html>